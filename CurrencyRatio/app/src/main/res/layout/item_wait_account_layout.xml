<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_13">

    <TextView
        android:id="@+id/tv_wait_account_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="近日大盘走势整体向下，ETH于凌晨跌破500刀，？"
        android:textColor="#ff444444"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_wait_account_title"
        android:orientation="horizontal">

        <TextView
            android:gravity="left"
            android:id="@+id/tv_wait_select_amount"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textColor="#ff2a7ddf"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_toRightOf="@+id/tv_wait_select_amount"
            android:gravity="left"
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textColor="#ff2a7ddf"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="@dimen/dp_3"
            android:gravity="right"
            android:layout_toRightOf="@+id/tv_amount"
            android:id="@+id/tv_wait_raward_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textColor="#34AD56"
            android:textSize="14sp"
            android:visibility="visible"
            android:textStyle="bold" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_pvd_sell_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_detail"
        android:layout_marginTop="@dimen/dp_10"
        android:text=""
        android:textColor="#ff2a7ddf"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_join_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pvd_sell_buy"
        android:layout_marginTop="@dimen/dp_10"
        android:text=""
        android:textColor="#2A7DDF"
        android:textSize="11sp" />


</RelativeLayout>
